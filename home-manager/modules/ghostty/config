# fonts
font-size               = 12
font-family             = JetBrainsMono NFM SemiBold
font-family-bold        = JetBrainsMono NFM SemiBold
font-family-italic      = JetBrainsMono NFM SemiBold Italic
font-family-bold-italic = JetBrainsMono NFM ExtraBold Italic

# appearance
theme = MaterialDesignColors
background-opacity = 0.8
adjust-box-thickness = 1
# window-decoration = false
gtk-titlebar = false

# keybinds
keybind = global:super+grave_accent=toggle_quick_terminal

keybind = ctrl+n=new_window
keybind = ctrl+q=quit

keybind = alt+j=jump_to_prompt:1
keybind = alt+k=jump_to_prompt:-1
keybind = alt+down=jump_to_prompt:1
keybind = alt+up=jump_to_prompt:-1

keybind = ctrl+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+w=close_surface

keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+shift+down=new_split:down
keybind = ctrl+shift+right=new_split:right

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right
keybind = ctrl+left=goto_split:left
keybind = ctrl+down=goto_split:bottom
keybind = ctrl+up=goto_split:top
keybind = ctrl+right=goto_split:right

# "refresh" splits
keybind = ctrl+shift+r=equalize_splits

# Defaults
# run command ghostty +list-keybinds --default

