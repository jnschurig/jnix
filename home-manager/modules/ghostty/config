# fonts
font-size = 13
font-family = "JetBrains Mono"

font-style = "Bold"
font-style-bold = "ExtraBold"
font-style-italic = "Bold Italic"
font-style-bold-italic = "ExtraBold Italic"

# appearance
# theme = rose-pine-moon-custom
theme = MaterialDesignColors

# General
adjust-box-thickness = 1
maximize = true
window-padding-x = 6

# Linux
gtk-titlebar = false

# Macos
# font-thicken = true # I go back and forth on this...
background-opacity = 0.8
background-blur = false
keybind = global:super+escape=toggle_quick_terminal

# Quick terminal
quick-terminal-space-behavior = remain
quick-terminal-autohide = false
quick-terminal-screen = main
quick-terminal-animation-duration = 0.1
quit-after-last-window-closed = true
app-notifications = true

# keybinds
keybind = performable:ctrl+c=copy_to_clipboard
# keybind = ctrl+v=paste_from_clipboard # messes with vim

keybind = ctrl+n=new_window
keybind = ctrl+q=quit

keybind = alt+j=jump_to_prompt:1
keybind = alt+k=jump_to_prompt:-1
keybind = alt+down=jump_to_prompt:1
keybind = alt+up=jump_to_prompt:-1

keybind = ctrl+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = super+w=close_surface

keybind = alt+tab=goto_split:next
keybind = alt+shift+tab=goto_split:previous

keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+l=new_split:right
keybind = ctrl+shift+down=new_split:down
keybind = ctrl+shift+right=new_split:right

# "refresh" splits
keybind = ctrl+shift+r=equalize_splits

# Defaults
# run command ghostty +list-keybinds --default
